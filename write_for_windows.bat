@echo off

rem////////////////////////////////////////////////////////////////////
rem    AGING TEST - 설정 디렉토리에 4KB ~ 1GB의 파일을 계속 생성
rem////////////////////////////////////////////////////////////////////
rem               Sync 경로 및 테스트파일 크기 설정
rem////////////////////////////////////////////////////////////////////
set path="E:"
set loop_count=0
:_loop
set /a loop_count+=1
set /a size=%RANDOM% %% 1048576 + 5
set /a size*=1024
rem////////////////////////////////////////////////////////////////////
rem////////////////////////////////////////////////////////////////////


rem////////////////////////////////////////////////////////////////////
rem///////////////////////////TEST START///////////////////////////
rem////////////////////////////////////////////////////////////////////

rem////////////////////////////////////////////////////////////////////
rem          파일 생성
rem////////////////////////////////////////////////////////////////////
start /wait fsutil file createnew %path%\aging_test_%loop_count% %size%
start /wait timeout 3

goto _loop


echo Done testing for Aging

rem////////////////////////////////////////////////////////////////////
rem ///////////////////////////TEST  END////////////////////////////
rem////////////////////////////////////////////////////////////////////